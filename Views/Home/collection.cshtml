@model List<Application>
@{
    ViewData["Title"] = "Collection";
}
<style>
    .collection-page {
        max-width: 900px;
        margin: 0 auto;
        padding: 50px 20px;
    }

        .collection-page h1 {
            font-family: 'Georgia', serif;
            font-size: 2.5rem;
            letter-spacing: 2px;
            color: #1a1a2e;
            text-align: center;
            margin-bottom: 40px;
        }

    .movie-form {
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin-bottom: 60px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            color: #1a1a2e;
            margin-bottom: 6px;
            font-size: 0.95rem;
            letter-spacing: 0.5px;
        }

        .form-group input,
        .form-group select {
            padding: 12px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            background: #fafafa;
        }

            .form-group input:focus,
            .form-group select:focus {
                outline: none;
                border-color: #e63946;
                box-shadow: 0 0 0 3px rgba(230, 57, 70, 0.15);
                background: #fff;
            }

        .form-group small {
            margin-top: 4px;
            color: #999;
            font-size: 0.85rem;
        }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .submit-btn {
        display: block;
        width: 100%;
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 700;
        letter-spacing: 1px;
        color: #fff;
        background: linear-gradient(135deg, #e63946, #c1121f);
        border: none;
        border-radius: 10px;
        cursor: pointer;
        margin-top: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 6px 24px rgba(230, 57, 70, 0.3);
    }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 36px rgba(230, 57, 70, 0.45);
        }

    .collection-table-section h2 {
        font-family: 'Georgia', serif;
        font-size: 2rem;
        letter-spacing: 1.5px;
        color: #1a1a2e;
        text-align: center;
        margin-bottom: 30px;
    }

    .table-wrapper {
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .movie-table {
        width: 100%;
        border-collapse: collapse;
    }

        .movie-table thead {
            background: linear-gradient(135deg, #1a1a2e, #14213d);
            color: #fff;
        }

        .movie-table th {
            padding: 16px 18px;
            text-align: left;
            font-weight: 600;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .movie-table td {
            padding: 14px 18px;
            color: #333;
            font-size: 0.95rem;
            border-bottom: 1px solid #f0f0f0;
        }

        .movie-table tbody tr:hover {
            background: #fef2f2;
            transition: background 0.2s ease;
        }

        .movie-table tbody tr:last-child td {
            border-bottom: none;
        }

    .empty-msg {
        text-align: center;
        padding: 40px;
        color: #aaa;
        font-size: 1.1rem;
    }
</style>

<div class="container mt-4">
    <h1 class="mb-4">🎬 Joel's Movie Collection</h1>

    <!-- Add Movie Form -->
    <div class="card mb-5">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Add a Movie</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Collection">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Category</label>
                        <select name="CategoryId" class="form-select" required>
                            <option value="">-- Select Category --</option>
                            @foreach (var cat in ViewBag.Categories)
                            {
                                <option value="@cat.CategoryId">@cat.CategoryName</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Title</label>
                        <input name="Title" class="form-control" required />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Year</label>
                        <input name="Year" type="number" class="form-control" required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Director</label>
                        <input name="Director" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Rating</label>
                        <select name="Rating" class="form-select">
                            <option value="">-- Select --</option>
                            <option value="G">G</option>
                            <option value="PG">PG</option>
                            <option value="PG-13">PG-13</option>
                            <option value="R">R</option>
                            <option value="NR">NR</option>
                            <option value="UR">UR</option>
                            <option value="TV-14">TV-14</option>
                            <option value="TV-MA">TV-MA</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Edited</label>
                        <select name="Edited" class="form-select">
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Lent To</label>
                        <input name="LentTo" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Copied to Plex</label>
                        <select name="CopiedToPlex" class="form-select">
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Notes</label>
                        <input name="Notes" class="form-control" maxlength="25" />
                        <small class="text-muted">Max 25 characters</small>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Add Movie</button>
            </form>
        </div>
    </div>

    <!-- Movie Table -->
    <h2 class="mb-3">All Movies (@Model.Count)</h2>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Plex</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Category?.CategoryName</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@(movie.Edited ? "Yes" : "No")</td>
                    <td>@movie.LentTo</td>
                    <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                    <td>@movie.Notes</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>