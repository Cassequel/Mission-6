@{
    ViewData["Title"] = "Collection";
}
@model Application

<style>
    .collection-page {
        max-width: 900px;
        margin: 0 auto;
        padding: 50px 20px;
    }

        .collection-page h1 {
            font-family: 'Georgia', serif;
            font-size: 2.5rem;
            letter-spacing: 2px;
            color: #1a1a2e;
            text-align: center;
            margin-bottom: 40px;
        }

    .movie-form {
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin-bottom: 60px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            color: #1a1a2e;
            margin-bottom: 6px;
            font-size: 0.95rem;
            letter-spacing: 0.5px;
        }

        .form-group input,
        .form-group select {
            padding: 12px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            background: #fafafa;
        }

            .form-group input:focus,
            .form-group select:focus {
                outline: none;
                border-color: #e63946;
                box-shadow: 0 0 0 3px rgba(230, 57, 70, 0.15);
                background: #fff;
            }

        .form-group small {
            margin-top: 4px;
            color: #999;
            font-size: 0.85rem;
        }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .submit-btn {
        display: block;
        width: 100%;
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 700;
        letter-spacing: 1px;
        color: #fff;
        background: linear-gradient(135deg, #e63946, #c1121f);
        border: none;
        border-radius: 10px;
        cursor: pointer;
        margin-top: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 6px 24px rgba(230, 57, 70, 0.3);
    }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 36px rgba(230, 57, 70, 0.45);
        }

    .collection-table-section h2 {
        font-family: 'Georgia', serif;
        font-size: 2rem;
        letter-spacing: 1.5px;
        color: #1a1a2e;
        text-align: center;
        margin-bottom: 30px;
    }

    .table-wrapper {
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .movie-table {
        width: 100%;
        border-collapse: collapse;
    }

        .movie-table thead {
            background: linear-gradient(135deg, #1a1a2e, #14213d);
            color: #fff;
        }

        .movie-table th {
            padding: 16px 18px;
            text-align: left;
            font-weight: 600;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .movie-table td {
            padding: 14px 18px;
            color: #333;
            font-size: 0.95rem;
            border-bottom: 1px solid #f0f0f0;
        }

        .movie-table tbody tr:hover {
            background: #fef2f2;
            transition: background 0.2s ease;
        }

        .movie-table tbody tr:last-child td {
            border-bottom: none;
        }

    .empty-msg {
        text-align: center;
        padding: 40px;
        color: #aaa;
        font-size: 1.1rem;
    }
</style>

<div class="collection-page">
    <h1>🎬 ADD A MOVIE</h1>

    <form method="post" class="movie-form">
        <div class="form-row">
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" required>
                    <option value="">-- Select Category --</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Year">Year</label>
                <input asp-for="Year" type="number" required />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director">Director</label>
                <input asp-for="Director" required />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Rating">Rating</label>
                <select asp-for="Rating" required>
                    <option value="">-- Select Rating --</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edited">Edited</label>
                <select asp-for="Edited">
                    <option value="">-- Select --</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="LentTo">Lent To</label>
                <input asp-for="LentTo" />
            </div>
            <div class="form-group">
                <label asp-for="Notes">Notes</label>
                <input asp-for="Notes" maxlength="25" />
                <small>Max 25 characters</small>
            </div>
        </div>

        <button type="submit" class="submit-btn">Add to Collection</button>
    </form>

    <div class="collection-table-section">
        <h2>🎥 MOVIE COLLECTION</h2>

        <div class="table-wrapper">
            @if (((IEnumerable<dynamic>)ViewBag.Movies).Any())
            {
                <table class="movie-table">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Title</th>
                            <th>Year</th>
                            <th>Director</th>
                            <th>Rating</th>
                            <th>Edited</th>
                            <th>Lent To</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in ViewBag.Movies)
                        {
                            <tr>
                                <td>@movie.Category?.CategoryName</td>
                                <td>@movie.Title</td>
                                <td>@movie.Year</td>
                                <td>@movie.Director</td>
                                <td>@movie.Rating</td>
                                <td>@(movie.Edited == true ? "Yes" : "No")</td>
                                <td>@movie.LentTo</td>
                                <td>@movie.Notes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="empty-msg">No movies yet — add your first one above!</p>
            }
        </div>
    </div>
</div>