@model Application
@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mt-4">
    <h1 class="mb-4">✏️ Edit Movie</h1>

    <div class="card">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Editing: @Model.Title</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="MovieId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-select" required>
                            <option value="">-- Select Category --</option>
                            @foreach (var cat in ViewBag.Categories)
                            {
                                <option value="@cat.CategoryId">@cat.CategoryName</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="Year" class="form-label">Year</label>
                        <input asp-for="Year" type="number" class="form-control" required />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Director" class="form-label">Director</label>
                        <input asp-for="Director" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Rating" class="form-label">Rating</label>
                        <select asp-for="Rating" class="form-select">
                            <option value="">-- Select --</option>
                            <option value="G">G</option>
                            <option value="PG">PG</option>
                            <option value="PG-13">PG-13</option>
                            <option value="R">R</option>
                            <option value="NR">NR</option>
                            <option value="UR">UR</option>
                            <option value="TV-14">TV-14</option>
                            <option value="TV-MA">TV-MA</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Edited" class="form-label">Edited</label>
                        <select asp-for="Edited" class="form-select">
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="LentTo" class="form-label">Lent To</label>
                        <input asp-for="LentTo" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CopiedToPlex" class="form-label">Copied to Plex</label>
                        <select asp-for="CopiedToPlex" class="form-select">
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <input asp-for="Notes" class="form-control" maxlength="25" />
                        <small class="text-muted">Max 25 characters</small>
                    </div>
                </div>

                <button type="submit" class="btn btn-warning">Save Changes</button>
                <a asp-action="Collection" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>